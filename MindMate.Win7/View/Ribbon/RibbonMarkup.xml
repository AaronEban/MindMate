      <Command.SmallImages><Image>Res/Open16.bmp</Image></Command.SmallImages>
    </Command>
    <Command Name="ButtonSave" Id="1003" LabelTitle="Save" LabelDescription="Save Description" TooltipTitle="Save" TooltipDescription="Save current map (Ctrl + S)">
      <Command.LargeImages><Image>Res/Save32.bmp</Image></Command.LargeImages>
      <Command.SmallImages><Image>Res/Save16.bmp</Image></Command.SmallImages>
