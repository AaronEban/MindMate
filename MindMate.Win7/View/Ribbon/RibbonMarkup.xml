      <Command.SmallImages><Image>Res/SaveAllHS.png</Image></Command.SmallImages>
    </Command>
    <Command Name="Export" Id="1010" LabelTitle="Export">
    </Command>
    <Command Name="ExportAsPNG" Id="1008" LabelTitle="As Image (PNG)" LabelDescription="PNG file format" >
