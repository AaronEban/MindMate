      </Command.LargeImages>
    </Command>
    <Command Name="NewNodeParent" Id="2015" LabelTitle="New Parent" TooltipDescription="Create a new node between curent node and it's parent">
      <Command.LargeImages>
        <Image>Res/node-insert.bmp</Image>
      </Command.LargeImages>
    </Command>

    <!--Group: Edit-->
    <Command Name="GrpEdit" Id="2030" LabelTitle="Edit"/>
    <Command Name="EditText" Id="2031" LabelTitle="Edit Text" TooltipDescription="Edit text of the node (F2)">
      <Command.SmallImages>
        <Image>Res/edit.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="EditLong" Id="2032" LabelTitle="Edit Multi-line" TooltipDescription="Edit text of node in multi-line editor (Alt + Enter)">
    <Command.SmallImages>
        <Image>Res/align_compact.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="DeleteNode" Id="2033" LabelTitle="Delete" TooltipDescription="Edit selected node(s) (Del)">     
      <Command.SmallImages>
        <Image>Res/cross-script.bmp</Image>
      </Command.SmallImages>
    </Command>

    <!--Group: Clipboard-->
    <Command Name="GrpClipboard" Id="2050" LabelTitle="Clipboard" />
    <Command Name="Paste" Id="2051" LabelTitle="Paste" TooltipDescription="Paste (Ctrl + V)">
      <Command.LargeImages>
        <Image>Res/page_white_paste.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="PasteAsText" Id="2052" LabelTitle="Paste as Text" >
      <Command.SmallImages>
        <Image>Res/paste_plain.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="Cut" Id="2053" LabelTitle="Cut" TooltipDescription="Cut (Ctrl + X)">
      <Command.LargeImages>
        <Image>Res/cut.png</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="Copy" Id="2054" LabelTitle="Copy" TooltipDescription="Copy (Ctrl + C)">
      <Command.SmallImages>
        <Image>Res/page_white_copy.png</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="FormatPainter" Id="2055" LabelTitle="Format Painter" >
      <Command.SmallImages>
        <Image>Res/format_painter.bmp</Image>
      </Command.SmallImages>
    </Command>

    <!--Group: Font-->
    <Command Name="GrpFont" Id="2070" LabelTitle="Font" />
    <Command Name="RichFont" Id="2071" LabelTitle="RichFont" />
    
    <!--Group: IconsGallery-->
    <Command Name="GrpIcons" Id="2080" LabelTitle="Icons" />
    <Command Name="IconsGallery" Id="2081" LabelTitle="Icons Gallery" />
    <Command Name="RemoveLastIcon" Id="2082" LabelTitle="Remove Last Icon" TooltipDescription="Remove recently added icon from selected node(s)" />
    <Command Name="RemoveAllIcons" Id="2083" LabelTitle="Remove All Icons" TooltipDescription="Remove all icons from the selected node(s)" />
    <Command Name="LaunchIconsDialog" Id="2084" LabelTitle="Launch Icons Dialog ..." TooltipDescription="Launch Icons Dialog to select or customize icons" />
    
    <!--Tab: Edit-->
    <Command Name="TabEdit" Id="3000" LabelTitle="Edit" />
    
    <!--Group: Select-->
    <Command Name="GrpSelect" Id="3010" LabelTitle="Select" />
    <Command Name="SelectAll" Id="3011" LabelTitle="Select All" TooltipDescription="Select all nodes" />
    <Command Name="SelectSiblings" Id="3012" LabelTitle="Siblings" 
             TooltipDescription="Select all siblings of selected node. 
             
Note:    

- Select all siblings above (Shift + Page Up) 
- Select all siblings below (Shift + Page Down)" />
    <Command Name="SelectAncestors" Id="3013" LabelTitle="Ancestors" TooltipDescription="Select parent and grandparents of the selected node" />
    <Command Name="SelectChildren" Id="3014" LabelTitle="Children" TooltipDescription="Select all children" />
    <Command Name="SelectDescendents" Id="3015" LabelTitle="Descentdents" TooltipDescription="Select all descendents i.e. branch" />
    <Command Name="SelectDescendentsUpto1" Id="3016" LabelTitle="Upto depth 1" TooltipDescription="Select all descendents upto depth 1 (i.e. children)" />
    <Command Name="SelectDescendentsUpto2" Id="3017" LabelTitle="Upto depth 2" TooltipDescription="Select all descendents upto depth 2" />
    <Command Name="SelectDescendentsUpto3" Id="3018" LabelTitle="Upto depth 3" TooltipDescription="Select all descendents upto depth 3" />
    <Command Name="SelectDescendentsUpto4" Id="3019" LabelTitle="Upto depth 4" TooltipDescription="Select all descendents upto depth 4" />
    <Command Name="SelectDescendentsUpto5" Id="3020" LabelTitle="Upto depth 5" TooltipDescription="Select all descendents upto depth 5" />
    <Command Name="IncludeSelected" Id="3021" LabelTitle="Expand Selection" TooltipDescription="Include currently selected nodes" />
    <Command Name="SelectLevel" Id="3022" LabelTitle="Select Level" TooltipDescription="Select all nodes at a certain level from center" />
    <Command Name="SelectLevel1" Id="3023" LabelTitle="Select Level 1" TooltipDescription="Select nodes at level 1 from center" />
    <Command Name="SelectLevel2" Id="3024" LabelTitle="Select Level 2" TooltipDescription="Select nodes at level 2 from center" />
    <Command Name="SelectLevel3" Id="3025" LabelTitle="Select Level 3" TooltipDescription="Select nodes at level 3 from center" />
    <Command Name="SelectLevel4" Id="3026" LabelTitle="Select Level 4" TooltipDescription="Select nodes at level 4 from center" />
    <Command Name="SelectLevel5" Id="3027" LabelTitle="Select Level 5" TooltipDescription="Select nodes at level 5 from center" />
    <Command Name="SelectLevelCurrent" Id="3028" LabelTitle="Select Current Level" TooltipDescription="Select nodes at the level of current node" />

  </Application.Commands>

  <Application.Views>
    <Ribbon>

      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="ApplicationMenu">
          
          <ApplicationMenu.RecentItems>
            <RecentItems CommandName="RecentItems" MaxCount="12" EnablePinning="false"/>
          </ApplicationMenu.RecentItems>

          <MenuGroup>
            <Button CommandName='ButtonNew' />
            <Button CommandName='ButtonOpen' />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName='ButtonSave' />
            <Button CommandName='SaveAs' />
            <Button CommandName='SaveAll' />
            <DropDownButton CommandName='Export'>
              <MenuGroup Class='MajorItems'>
                <Button CommandName='ExportAsPNG' />
                <Button CommandName='ExportAsJPG' />
              </MenuGroup>
            </DropDownButton>
          </MenuGroup>
          <MenuGroup>
            <Button CommandName='Close' />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName='ButtonExit' />
          </MenuGroup>
          
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>

      <Ribbon.Tabs>
        <Tab CommandName='TabHome'>
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group='GrpClipboard' Size='Medium' />
              </ScalingPolicy.IdealSizes>
              <Scale Group='GrpIcons' Size='Medium' />
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName='NewNode'>
            <SizeDefinition>
              <ControlNameMap>
                <ControlNameDefinition Name='button1' />
                <ControlNameDefinition Name='button2' />
                <ControlNameDefinition Name='button3' />
                <ControlNameDefinition Name='button4' />
              </ControlNameMap>
              <GroupSizeDefinition Size='Large'>
                <Row>
                  <ControlSizeDefinition ControlName='button1' ImageSize='Large' IsLabelVisible='true' />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName='button2' ImageSize='Small' IsLabelVisible='true' />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName='button3' ImageSize='Small' IsLabelVisible='true' />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName='button4' ImageSize='Small' IsLabelVisible='true' />
                </Row>
              </GroupSizeDefinition>
            </SizeDefinition>
            <SplitButton>
              <Button CommandName='NewChildNode' />
              <Button CommandName='NewLongNode' />
            </SplitButton>
            <Button CommandName='NewNodeAbove' />
            <Button CommandName='NewNodeBelow' />
            <Button CommandName='NewNodeParent' />
          </Group>
          <Group CommandName='GrpEdit'>
            <Button CommandName='EditText' />
            <Button CommandName='EditLong' />
            <Button CommandName='DeleteNode' />
          </Group>
          <Group CommandName='GrpClipboard' SizeDefinition='FourButtons'>
            <SplitButton>
              <Button CommandName='Paste'/>
              <Button CommandName='PasteAsText' />
            </SplitButton>
            <Button CommandName='Cut' />
            <Button CommandName='Copy' />
            <ToggleButton CommandName='FormatPainter' />
          </Group>
          <Group CommandName='GrpFont' SizeDefinition='OneFontControl'>
            <FontControl CommandName="RichFont" FontType="FontWithColor" IsUnderlineButtonVisible="false" IsHighlightButtonVisible="true" />
          </Group>
          <Group CommandName="GrpIcons" SizeDefinition="OneInRibbonGallery">
            <InRibbonGallery CommandName="IconsGallery" Type="Items" MinColumnsLarge="2" MaxColumnsMedium="2" MinColumnsMedium="1" MaxColumns="4" MaxRows="4">
              <InRibbonGallery.MenuLayout>
                <FlowMenuLayout />
              </InRibbonGallery.MenuLayout>
              <InRibbonGallery.MenuGroups>
                <MenuGroup>
                  <Button CommandName="RemoveLastIcon"/>
                  <Button CommandName="RemoveAllIcons" />
                  <Button CommandName="LaunchIconsDialog" />
                </MenuGroup>
              </InRibbonGallery.MenuGroups>
            </InRibbonGallery>
          </Group>
        </Tab>
        <Tab CommandName="TabEdit">
          <Group CommandName="GrpSelect">
            <SizeDefinition>
              <ControlNameMap>
                <ControlNameDefinition Name="button1" />
                <ControlNameDefinition Name="button2" />
                <ControlNameDefinition Name="button3" />
                <ControlNameDefinition Name="button4" />
                <ControlNameDefinition Name="button5" />
                <ControlNameDefinition Name="button6" />
                <ControlNameDefinition Name="button7" />
              </ControlNameMap>
              <GroupSizeDefinition Size="Large" >
                <Row>
                  <ControlSizeDefinition ControlName="button1" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button2" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button3" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button4" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button5" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button6" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button7" ImageSize="Large" IsLabelVisible="true" />
                </Row>
              </GroupSizeDefinition>
            </SizeDefinition>
            <Button CommandName="SelectAll" />
            <Button CommandName="SelectSiblings" />
            <Button CommandName="SelectAncestors" />
            <Button CommandName="SelectChildren" />
            <SplitButton>
              <Button CommandName="SelectDescendents" />
              <Button CommandName="SelectDescendentsUpto1" />
              <Button CommandName="SelectDescendentsUpto2" />
              <Button CommandName="SelectDescendentsUpto3" />
              <Button CommandName="SelectDescendentsUpto4" />
              <Button CommandName="SelectDescendentsUpto5" />
            </SplitButton>
            <CheckBox CommandName="IncludeSelected" />
            <DropDownButton CommandName="SelectLevel" >
              <Button CommandName="SelectLevel1" />
              <Button CommandName="SelectLevel2" />
              <Button CommandName="SelectLevel3" />
              <Button CommandName="SelectLevel4" />
              <Button CommandName="SelectLevel5" />
              <Button CommandName="SelectLevelCurrent" /> 
            </DropDownButton>
          </Group>
        </Tab>
      </Ribbon.Tabs>
    </Ribbon>
  </Application.Views>

</Application>
