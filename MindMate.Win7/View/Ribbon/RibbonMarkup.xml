<?xml version='1.0' encoding='utf-8'?>
<Application xmlns='http://schemas.microsoft.com/windows/2009/Ribbon'>
  
  <Application.Commands>

    <!--Application Menu-->
    <Command Name="ApplicationMenu" Id="1000" />

    <Command Name="ButtonNew" Id="1001" LabelTitle="&amp;New" LabelDescription="New Description" TooltipTitle="New" TooltipDescription="Create new Mind Map (Ctrl + N)">
      <Command.LargeImages>
        <Image>Res/New32.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>Res/New16.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="ButtonOpen" Id="1002" LabelTitle="Open" LabelDescription="Open Description" TooltipTitle="Open" TooltipDescription="Open existing Mind Map (Ctrl + O)">
      <Command.LargeImages>
        <Image>Res/Open32.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>Res/Open16.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="ButtonSave" Id="1003" LabelTitle="Save" LabelDescription="Save Description" TooltipTitle="Save" TooltipDescription="Save current map (Ctrl + S)">
      <Command.LargeImages>
        <Image>Res/Save32.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>Res/Save16.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="Close" Id="1005" LabelTitle="Close" LabelDescription="Close Mind Map" TooltipTitle="Close" TooltipDescription="Close current Mind Map">
      <Command.LargeImages>
        <Image>Res/Close3.png</Image> 
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>Res/Close4.png</Image> 
      </Command.SmallImages>
    </Command>
    <Command Name="ButtonExit" Id="1004" LabelTitle="Exit" LabelDescription="Exit Description" TooltipTitle="Exit" TooltipDescription="Exit application (Alt + F4)">
      <Command.LargeImages>
        <Image>Res/Exit.png</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>Res/Exit.png</Image>
      </Command.SmallImages>
    </Command>

    <!--Tab: Home-->
    <Command Name="TabHome"
        Id="2000"
        LabelTitle="Home">
    </Command>

    <!--Group: New Node-->
    <Command Name="NewNode" Id="2010" LabelTitle="New Node" />
    <Command Name="NewChildNode" Id="2011" LabelTitle="New Child" TooltipDescription="Create new child node (Tab)">
      <Command.LargeImages>
        <Image>Res/node-insert-child.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="NewLongNode" Id="2012" LabelTitle="New Long Text" TooltipDescription="Create a multi-line child node">
      <Command.SmallImages>
        <Image>Res/align_compact.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="NewNodeAbove" Id="2013" LabelTitle="Node Above" TooltipDescription="Create sibling node above (Shift + Enter)">
      <Command.LargeImages>
        <Image>Res/node-insert-previous.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="NewNodeBelow" Id="2014" LabelTitle="Node below" TooltipDescription="Create sibling node below (Enter)">
      <Command.LargeImages>
        <Image>Res/node-insert-next.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="NewNodeParent" Id="2015" LabelTitle="New Parent" TooltipDescription="Create a new node between curent node and it's parent">
      <Command.LargeImages>
        <Image>Res/node-insert.bmp</Image>
      </Command.LargeImages>
    </Command>

    <!--Group: Edit-->
    <Command Name="GrpEdit" Id="2030" LabelTitle="Edit"/>
    <Command Name="EditText" Id="2031" LabelTitle="Edit Text" TooltipDescription="Edit text of the node (F2)">
      <Command.SmallImages>
        <Image>Res/edit.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="EditLong" Id="2032" LabelTitle="Edit Multi-line" TooltipDescription="Edit text of node in multi-line editor (Alt + Enter)">
    <Command.SmallImages>
        <Image>Res/align_compact.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="DeleteNode" Id="2033" LabelTitle="Delete" TooltipDescription="Edit selected node(s) (Del)">     
      <Command.SmallImages>
        <Image>Res/cross-script.bmp</Image>
      </Command.SmallImages>
    </Command>

    <!--Group: Clipboard-->
    <Command Name="GrpClipboard" Id="2050" LabelTitle="Clipboard" />
    <Command Name="Paste" Id="2051" LabelTitle="Paste" TooltipDescription="Paste (Ctrl + V)">
      <Command.LargeImages>
        <Image>Res/page_white_paste.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="PasteAsText" Id="2052" LabelTitle="Paste as Text" >
      <Command.SmallImages>
        <Image>Res/paste_plain.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="Cut" Id="2053" LabelTitle="Cut" TooltipDescription="Cut (Ctrl + X)">
      <Command.LargeImages>
        <Image>Res/cut.png</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="Copy" Id="2054" LabelTitle="Copy" TooltipDescription="Copy (Ctrl + C)">
      <Command.SmallImages>
        <Image>Res/page_white_copy.png</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="FormatPainter" Id="2055" LabelTitle="Format Painter" >
      <Command.SmallImages>
        <Image>Res/format_painter.bmp</Image>
      </Command.SmallImages>
    </Command>

    <!--Group: Font-->
    <Command Name="GrpFont" Id="2070" LabelTitle="Font" />
    <Command Name="RichFont" Id="2071" LabelTitle="RichFont" />


  </Application.Commands>

  <Application.Views>
    <Ribbon>

      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="ApplicationMenu">
          <MenuGroup>
            <Button CommandName='ButtonNew' />
            <Button CommandName='ButtonOpen' />
            <Button CommandName='ButtonSave' />
            <Button CommandName='Close' />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName='ButtonExit' />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>

      <Ribbon.Tabs>
        <Tab CommandName='TabHome'>
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group='GrpClipboard' Size='Medium' />
              </ScalingPolicy.IdealSizes>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName='NewNode'>
            <SizeDefinition>
              <ControlNameMap>
                <ControlNameDefinition Name='button1' />
                <ControlNameDefinition Name='button2' />
                <ControlNameDefinition Name='button3' />
                <ControlNameDefinition Name='button4' />
              </ControlNameMap>
              <GroupSizeDefinition Size='Large'>
                <Row>
                  <ControlSizeDefinition ControlName='button1' ImageSize='Large' IsLabelVisible='true' />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName='button2' ImageSize='Small' IsLabelVisible='true' />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName='button3' ImageSize='Small' IsLabelVisible='true' />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName='button4' ImageSize='Small' IsLabelVisible='true' />
                </Row>
              </GroupSizeDefinition>
            </SizeDefinition>
            <SplitButton>
              <Button CommandName='NewChildNode' />
              <Button CommandName='NewLongNode' />
            </SplitButton>
            <Button CommandName='NewNodeAbove' />
            <Button CommandName='NewNodeBelow' />
            <Button CommandName='NewNodeParent' />
          </Group>
          <Group CommandName='GrpEdit'>
            <Button CommandName='EditText' />
            <Button CommandName='EditLong' />
            <Button CommandName='DeleteNode' />
          </Group>
          <Group CommandName='GrpClipboard' SizeDefinition='FourButtons'>
            <SplitButton>
              <Button CommandName='Paste'/>
              <Button CommandName='PasteAsText' />
            </SplitButton>
            <Button CommandName='Cut' />
            <Button CommandName='Copy' />
            <ToggleButton CommandName='FormatPainter' />
          </Group>
          <Group CommandName='GrpFont' SizeDefinition='OneFontControl'>
            <FontControl CommandName="RichFont" FontType="FontWithColor" IsUnderlineButtonVisible="false" IsHighlightButtonVisible="true" />
          </Group>
        </Tab>
      </Ribbon.Tabs>
    </Ribbon>
  </Application.Views>

</Application>
